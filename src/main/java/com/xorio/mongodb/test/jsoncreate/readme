SIMPLE

java:

$("x", 1);

json:

{ "x" : 1}

EMBEDDED

java:

$(
		"x", $(
				"$ne", 3
		)
)

json:

{
   "x":{
      "$ne":3
   }
}

EMBEDDED WITH ARRAY

java:

$(
		"x", $(
				$("y", $(
								$("z1", 1),
								$("z2", 2)
						)
				),
				$arr("array",
						$("a1", 1),
						1
				)
		)
)

json:

{
   "x":{
      "y":{
         "z1":1,
         "z2":2
      },
      "array":[
         {
            "a1":1
         },
         1
      ]
   }
}
